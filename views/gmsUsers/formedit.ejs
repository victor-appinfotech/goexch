<form method="POST" action="/gmsUsers/save">
    <input type='hidden' name='resourceId' value='<%=gmsUserDetail.resourceId %>'>
    <div class="form-lg cust-label mb-4">
        <label>User Type</label>
        <select class="browser-default custom-select" name="user_type" id="user_type">
            <option <%- gmsUserDetail.user_type == 1 ? 'selected' : '' %> value="1" selected>Admin</option>
            <option <%- gmsUserDetail.user_type == 2 ? 'selected' : '' %> value="2">User</option>
        </select>
    </div>
    <div class="md-form md-outline form-lg">
        <label for="username">Username</label>
        <input id="username" class="form-control form-control-lg" type="text" name="username" value='<%=gmsUserDetail.username %>'>
        <span style='color:red' class='username error'></span>
    </div>
    <div class="text-right pt-3">
        <a type="button" class="btn btn-primary waves-effect m-0 turnkey">Edit <i class="fas fa-paper-plane"></i></a>
    </div>
</form>