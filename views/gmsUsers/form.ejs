<form method="POST" action="/gmsUsers/save">
    <div class="form-lg cust-label mb-4">
        <label>User Type</label>
        <select class="browser-default custom-select" name="user_type" id="user_type">
            <option value="1" selected>Admin</option>
            <option value="2">User</option>
        </select>
    </div>
    <div class="md-form md-outline form-lg">
        <label for="username">Username</label>
        <input id="username" class="form-control form-control-lg" type="text" name="username" value=''>
        <span style='color:red' class='username error'></span>
    </div>
    <div class="md-form md-outline form-lg">
        <input id="form-lg" class="form-control form-control-lg" type="text" name="password" value=''>
        <label for="form-lg">Password</label>
        <span style='color:red' class='password error'></span>
    </div>   
    <div class="text-right pt-3">
        <a type="button" class="btn btn-primary waves-effect m-0 turnkey">Create <i class="fas fa-paper-plane"></i></a>
    </div>
</form>