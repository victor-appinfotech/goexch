
<div class="modal-body text-center p-0">

  <!-- <h5 class="mt-1 mb-2">Maria Doe</h5> -->

  <h5 class="grey-text text-center mb-3">
    <strong>Log-in</strong>
  </h5>
  
  <% include ./partials/messages %>

  <form action="/login" method="POST">
  <input type="hidden" name="_csrf" value="<%= token %>">
  <div class="login-form p-3">
      <div class="input-cont md-form ml-0 mr-0">
        <input
            type="text"
            name="username"
            class="form-control ml-0"
            id="user"
          />
        <label for="user" class="ml-0"><i class="fas fa-user"></i> User Name</label>
      </div>
      
      <div class="input-cont md-form ml-0 mr-0">
        <input
            type="password"
            name="password"
            class="form-control  ml-0"
            id="password"
          />
        <label for="password" class="ml-0"><i class="fas fa-lock"></i> Enter password</label>
      </div>

      <div class="text-center mt-4">
        <button class="btn yellow-bg waves-effect waves-light">Login
          <i class="fas fa-sign-in-alt ml-1"></i>
        </button>
      </div>
  </div>
  </form>
</div>
